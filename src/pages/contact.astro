---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { personal } from "@/data/personal";
import SocialLinksGrid from "@/components/SocialLinksGrid.astro";
---

<BaseLayout title={`Contact - ${personal.name}`} description={`Get in touch with ${personal.name}`}>
  <div class="mx-auto max-w-5xl px-6 py-16 sm:py-20">
    <div class="mb-14 animate-on-scroll">
      <h1 class="text-3xl font-bold tracking-tight">Contact</h1>
      <p class="mt-2 text-[var(--color-text-secondary)]">
        Want to get in touch? Feel free to reach out through any of these channels
      </p>
    </div>

    <SocialLinksGrid />
  </div>
</BaseLayout>
