---
import { Icon } from "astro-icon/components";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { personal } from "@/data/personal";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const isDev = import.meta.env.DEV;
  const posts = await getCollection("blog", ({ data }) =>
    !data.externalUrl && (isDev || !data.draft)
  );
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} - ${personal.name}`} description={post.data.description} ogType="article">
  <article class="mx-auto max-w-3xl px-4 py-16 sm:px-6 sm:py-20">
    <header class="mb-10">
      <a
        href="/blog"
        class="mb-4 inline-flex items-center gap-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
      >
        <Icon name="lucide:arrow-left" size={16} />
        Back to Blog
      </a>
      {post.data.draft && (
        <div class="mb-4 rounded-lg border border-amber-500/30 bg-amber-500/10 px-4 py-3 text-sm text-amber-600 dark:text-amber-400">
          This post is a draft â€” it's only visible in dev mode.
        </div>
      )}
      <h1 class="text-3xl font-bold sm:text-4xl">{post.data.title}</h1>
      <div class="mt-3 flex items-center gap-4 text-sm text-[var(--color-text-muted)]">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </time>
      </div>
      {post.data.tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-1.5">
          {post.data.tags.map((tag) => (
            <span class="rounded-full border border-[var(--color-border)] px-2.5 py-0.5 text-xs text-[var(--color-text-muted)]">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
