---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ExternalLink from "@/components/ExternalLink.astro";
import { personal } from "@/data/personal";
import { usesCategories } from "@/data/uses";
---

<BaseLayout title={`Uses - ${personal.name}`} description="Tools and setup AndrÃ© Jesus uses">
  <div class="mx-auto max-w-5xl px-6 py-16 sm:py-20">
    <div class="mb-14 animate-on-scroll">
      <h1 class="text-3xl font-bold tracking-tight">Uses</h1>
      <p class="mt-2 text-[var(--color-text-secondary)]">
        Hardware, software, and tools I use daily
      </p>
      <p class="mt-2 text-sm text-[var(--color-text-muted)] italic">
        Inspired by <ExternalLink href="https://uses.tech/">uses.tech</ExternalLink>.
      </p>
    </div>

    <div class="space-y-6">
      {usesCategories.map((cat, i) => (
        <div class="glass-card p-6 sm:p-8 animate-on-scroll" data-delay={String(Math.min(i + 1, 6))}>
          <div class="flex items-center gap-3 mb-5">
            <span class="text-2xl">{cat.emoji}</span>
            <h2 class="font-semibold text-[var(--color-text)]">{cat.title}</h2>
          </div>
          <dl class="space-y-3">
            {cat.items.map((item) => (
              <div class="flex items-baseline gap-2 text-sm">
                <dt class="font-medium text-[var(--color-text-muted)] flex-shrink-0">{item.label}:</dt>
                <dd class="text-[var(--color-text-secondary)]">
                  {item.url ? (
                    <ExternalLink href={item.url}>
                      {item.value}
                    </ExternalLink>
                  ) : (
                    item.value
                  )}
                </dd>
              </div>
            ))}
          </dl>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
